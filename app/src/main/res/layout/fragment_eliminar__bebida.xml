<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="@string/erro_eliminar_bebida">

    <TextView
        android:id="@+id/textViewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/marca"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewMarca2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grainha" />

    <TextView
        android:id="@+id/textViewTeorAlcoolico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/teor_alcoolico"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewTeorAlcoolico2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sim" />

    <TextView
        android:id="@+id/textViewTipo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tipo"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewTipo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vinho1" />

</LinearLayout>